<h1>List of Cocktails</h1>
<%= link_to 'create a new cocktail', new_cocktail_path, class: "btn btn-danger btn-xs button-margin" %>
<ul class="list-unstyled">
  <% @cocktails.each do |cocktail| %>
    <li><i class="fa fa-glass"></i> <%= link_to cocktail.name, cocktail_path(cocktail) %></li>
  <% end %>
</ul>
<%= link_to 'create a new cocktail', new_cocktail_path, class: "btn btn-danger btn-xs button-margin" %>
